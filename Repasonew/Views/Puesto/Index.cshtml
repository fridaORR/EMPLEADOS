
@model IEnumerable<Entity.Epuesto>



@{
    ViewBag.Title = "Index";
}


@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-succes">@TempData["mensaje"]</div>
}
<div class="row align-items-center">
    <div class="col-4">

        @Html.ActionLink("Agregar Registro", "AgregarGet", null, new { @class = "btn btn-warning" })
    </div>

</div>
<div class="row align-items-center">

    <table class="table table-hover table-responsive">
        <thead class="table bg-success text-white">
            <tr>
                <th>Id</th>
                <th>Nombre</th>


            </tr>

        </thead>


        <tbody>
            @foreach (var item in Model)

            {
                <tr>

                    <td>@item.id</td>
                    <td>@item.nombre</td>
            
           


                    <td>

                        <a href="/Empleado/EditarGet/@item.id" class="btn btn-success"> Editar</a>

                        <a href="/Empleado/Eliminar/@item.id" onclick="return confirm('¿seguro que deseas eliminar ?' )" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>
